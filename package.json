{
  "name": "ultimate-sports-arena",
  "version": "1.0.0",
  "description": "Full-stack sports trivia and game hub",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "seed": "cd server && npm run seed",
    "init-elastic": "cd server && npm run init-elastic",
    "collect-data": "cd server && npm run collect-data",
    "test-sources": "cd server && npm run test-sources",
    "test-elastic": "cd server && npm run test-elastic"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}